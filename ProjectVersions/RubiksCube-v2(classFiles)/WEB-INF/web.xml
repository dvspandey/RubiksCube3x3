<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>RubiksCube-v2</display-name>
  <welcome-file-list>
 	 <welcome-file>UI-Day/indexDayFull.html</welcome-file> 
 	 <welcome-file>UI-Dark/indexDarkFull.html</welcome-file> 
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <!--Servlet Configuration -->
  <servlet>
  	<servlet-name>UserServlet</servlet-name>
  	<servlet-class>com.dev.rubikscube.controller.UserServlet</servlet-class>
  </servlet>
  <!-- Servlet mapping -->
  <servlet-mapping>
  	<servlet-name>UserServlet</servlet-name> 
  	<url-pattern>/steps</url-pattern>
  </servlet-mapping>
  
   <!--Servlet Configuration -->
  <servlet>
  	<servlet-name>AdminServlet</servlet-name>
  	<servlet-class>com.dev.rubikscube.controller.AdminServlet</servlet-class>
  </servlet>
  <!-- Servlet mapping -->
  <servlet-mapping>
  	<servlet-name>AdminServlet</servlet-name>
  	<url-pattern>/Admin</url-pattern>
  </servlet-mapping>
  
     <!--Servlet Configuration -->
  <servlet>
  	<servlet-name>AdminOperationsServlet</servlet-name>
  	<servlet-class>com.dev.rubikscube.controller.AdminOperationsServlet</servlet-class>
  </servlet>
  <!-- Servlet mapping -->
  <servlet-mapping>
  	<servlet-name>AdminOperationsServlet</servlet-name>
  	<url-pattern>/AdminOperations</url-pattern>
  </servlet-mapping>

</web-app>